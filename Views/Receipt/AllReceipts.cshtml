@model IEnumerable<FinancialEnterpriseGenie.Models.Receipt>
@{
    ViewData["Title"] = "All Receipts";
    Layout = "_Layout";
}

<h2>
    Receipts
</h2>

<div style="text-align: left;" class="container form-block border bg-grey">
    
    @foreach (var receipt in Model)
    {
        <p>Order ID: @receipt.Id | Product: @receipt.Item | Amount: @receipt.Quantity | Price: @receipt.Total.ToString("C") 
            | Date Purchased: @receipt.Date.ToString("yy-MMM-dd ddd") | Delivered: @receipt.ReceiveDate.ToString("yy-MMM-dd ddd") | @receipt.User.FirstName @receipt.User.LastName | User ID: @receipt.User.Id</p>

    }
</div>