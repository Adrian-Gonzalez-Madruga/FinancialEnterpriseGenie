
@{
    ViewData["Title"] = "ResetPasswordForm";
    Layout = "_formLayout";
}

<div class="display-4 text-center">Reset Password</div>
<form asp-action="ResetPasswordForm" method="post" class="form-block border bg-grey">
    <input name="_id" type="hidden" value="@ViewBag.Id" />
    <div class="form-group">
        <label for="_newPassword">New Password</label>
        <input class="form-control" type="password" name="_newPassword" placeholder="New Password" />
    </div>
    <div class="form-group">
        <label for="_confirmPassword">New Password</label>
        <input class="form-control" type="password" name="_confirmPassword" placeholder="Confirm Password" />
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger small">@ViewBag.ErrorMessage</div>
        }
    </div>
    <div class="text-center">
        <button class="btn btn-info btn-block" type="submit">Reset Password</button>
    </div>
</form>