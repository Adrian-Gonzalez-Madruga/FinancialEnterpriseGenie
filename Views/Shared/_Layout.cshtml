
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/lib/twitter-bootstrap/css/bootstrap.css">
    <script src="/lib/twitter-bootstrap/js/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">

        <a class="navbar-brand" href="#">Financial Enterprise Genie</a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Order" asp-action="Index">Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Receipt" asp-action="Index">Receipt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Stats" asp-action="Index">Stats</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Signin" asp-action="Login">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Signup" asp-action="Signup">Sign Up</a>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
